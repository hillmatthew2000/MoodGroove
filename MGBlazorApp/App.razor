<Router AppAssembly="@typeof(App).Assembly">
    <Found Context="routeData">
        <RouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
        <FocusOnNavigate RouteData="@routeData" Selector="h1" />
    </Found>
    <NotFound>
        <PageTitle>Not found</PageTitle>
        <LayoutView Layout="@typeof(MainLayout)">
            <div class="not-found-container">
                <div class="not-found-content">
                    <h1>🎵 Oops! This page doesn't exist</h1>
                    <p role="alert">Looks like this beat dropped off the playlist.</p>
                    <a href="/" class="btn btn-primary">Back to MoodGroove</a>
                </div>
            </div>
        </LayoutView>
    </NotFound>
</Router>

<div style="background: #1db954; color: white; padding: 2rem; text-align: center;">
    <h1>MoodGroove Test</h1>
    <p>If you see this, the basic app is working!</p>
</div>