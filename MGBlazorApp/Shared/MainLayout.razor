@using System.Net.Http
@using System.Net.Http.Json
@using Microsoft.AspNetCore.Components.Forms
@using Microsoft.AspNetCore.Components.Routing
@using Microsoft.AspNetCore.Components.Web
@using Microsoft.AspNetCore.Components.Web.Virtualization
@using Microsoft.AspNetCore.Components.WebAssembly.Http
@using Microsoft.JSInterop
@using MGBlazorApp
@using MGBlazorApp.Shared

@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 auth">
            <div class="app-title">
                <h1>ðŸŽµ MoodGroove</h1>
                <span class="subtitle">by @freddyj01 & @hillmatthew2000</span>
            </div>
            <LoginDisplay />
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<style>
    .page {
        position: relative;
        display: flex;
        flex-direction: column;
        min-height: 100vh;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
    }

    .sidebar {
        background: rgba(0, 0, 0, 0.1);
        backdrop-filter: blur(10px);
    }

    .top-row {
        background: rgba(255, 255, 255, 0.1);
        backdrop-filter: blur(10px);
        border-bottom: 1px solid rgba(255, 255, 255, 0.2);
        height: 3.5rem;
        display: flex;
        align-items: center;
        justify-content: space-between;
    }

    .app-title h1 {
        color: #1db954;
        margin: 0;
        font-size: 1.5rem;
        font-weight: 700;
    }

    .subtitle {
        color: rgba(255, 255, 255, 0.8);
        font-size: 0.8rem;
        margin-left: 0.5rem;
    }

    main {
        flex: 1;
    }

    .content {
        padding-top: 1.1rem;
    }

    @media (max-width: 640.98px) {
        .top-row {
            justify-content: space-between;
        }

        .top-row ::deep a, .top-row .btn-link {
            margin-left: 0;
        }
    }

    @media (min-width: 641px) {
        .page {
            flex-direction: row;
        }

        .sidebar {
            width: 250px;
            height: 100vh;
            position: sticky;
            top: 0;
        }

        .top-row {
            position: sticky;
            top: 0;
            z-index: 1;
        }
    }
</style>

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">MoodGroove</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="@NavMenuCssClass nav-scrollable" @onclick="CollapseNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="bi bi-house-door-fill-nav-menu" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="mood-selection">
                <span class="bi bi-emoji-smile-fill" aria-hidden="true"></span> Select Mood
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="genres">
                <span class="bi bi-music-note-list" aria-hidden="true"></span> My Genres
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="playlists">
                <span class="bi bi-collection-play-fill" aria-hidden="true"></span> My Playlists
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="spotify-connect">
                <span class="bi bi-spotify" aria-hidden="true"></span> Connect Spotify
            </NavLink>
        </div>
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;
    }

    private void CollapseNavMenu()
    {
        collapseNavMenu = true;
    }
}

<style>
    .navbar-toggler {
        background-color: rgba(255, 255, 255, 0.1);
    }

    .top-row {
        height: 3.5rem;
        background-color: rgba(0, 0, 0, 0.4);
    }

    .navbar-brand {
        font-size: 1.1rem;
        color: #1db954 !important;
        font-weight: 700;
    }

    .bi {
        display: inline-block;
        position: relative;
        width: 1.25rem;
        height: 1.25rem;
        margin-right: 0.75rem;
        top: -1px;
    }

    .nav-item {
        font-size: 0.9rem;
        padding-bottom: 0.5rem;
    }

    .nav-item:first-of-type {
        padding-top: 1rem;
    }

    .nav-item:last-of-type {
        padding-bottom: 1rem;
    }

    .nav-link {
        color: rgba(255, 255, 255, 0.8) !important;
        border-radius: 4px;
        height: 3rem;
        display: flex;
        align-items: center;
        line-height: 3rem;
        transition: all 0.3s ease;
    }

    .nav-link:hover {
        background-color: rgba(255, 255, 255, 0.1);
        color: #1db954 !important;
    }

    .nav-link.active {
        background-color: rgba(29, 185, 84, 0.25);
        color: #1db954 !important;
    }

    .nav-scrollable {
        display: flex;
        flex-direction: column;
        align-items: flex-start;
        overflow-y: auto;
        height: 100%;
    }

    .navbar-toggler:focus {
        box-shadow: 0 0 0 0.1rem white, 0 0 0 0.25rem #258cfb;
    }

    @media (min-width: 641px) {
        .navbar-toggler {
            display: none;
        }

        .collapse {
            display: block !important;
        }
    }
</style>